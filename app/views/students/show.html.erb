<div class="row sign-up-form">
  <div class="col s4 m6">
    <div class="card brown darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email:<%= @student.email %></p>
        <p>Course Enrollments:
          <% if @student.courses.empty? %>
          None
          <% else %>
            <ul>
              <% @student.courses.each do |course| %>
                <li><%= course.short_name %>: <%= course.name %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
      <div class="card-action">
        <% if current_user == @student %>
          <%= link_to '<i class="material-icons right black-text">edit</i>Edit Profile'.html_safe, edit_student_path(@student), class: "waves-effect white black-text btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>